{
  "name": "node-starter",
  "private": true,
  "engines": {
    "node": "18"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "npm run services:up && npm run wait-for-db && npm run migration:up  && tsx watch src/index.ts",
    "services:up": "docker compose -f  compose.yaml up -d",
    "services:stop": "docker compose -f compose.yaml stop",
    "services:down": "docker compose -f compose.yaml down",
    "build": "tsup src",
    "test": "npm run services:up &&  concurrently --success command-jest --names jest,server  \"jest --runInBand\" \"tsx watch src/index.ts\" --kill-others --hide server",
    "test:watch": "jest --watchAll --runInBand",
    "migration:create": "node-pg-migrate --migrations-dir src/infrastructure/migrations create",
    "migration:up": "node-pg-migrate -m src/infrastructure/migrations --envPath .env.development  up",
    "wait-for-db": "node src/infrastructure/scripts/wait-for-db.js"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv-expand": "^11.0.6",
    "express": "^4.18.2",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.9",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.11.11",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.4",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.2.6",
    "tsup": "^8.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
